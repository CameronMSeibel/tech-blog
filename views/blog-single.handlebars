<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{post.title}}</h3>
        <h5 class="card-subtitle">{{subtitle post.user.name post.posted}}</h5>
    </div>
    <div class="card-body">
        <p class="card-text">{{post.text}}</p>
    </div>
</div>
<div class="container mt-3">
    <h3>Comments</h3>
    {{#each post.comments as |comment|}}
    {{>blog-comment}}
    {{/each}}
    <a href="/comment" class="btn btn-primary text-center d-block mt-1">Leave a comment</a>
</div>