{{#each posts as |post|}}
<div class="d-flex justify-content-between">
    <a href="/dashboard/edit/{{post.id}}">Edit</a>
    <a href="/dashboard" class="delete link-danger" data-id="{{post.id}}">Delete</a>
</div>
{{> blog-post}}
{{/each}}
{{#unless posts}}
    <div class="alert alert-warning mb-5">
        <p class="card-text">You haven't made any posts yet.</p>
    </div>
{{/unless}}
<div class="text-center">
    <a href="/dashboard/create" class="btn btn-primary mx-auto">New Post</a>
</div>
<script src="/js/blog-actions.js"></script>