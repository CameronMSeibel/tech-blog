<div class="card">
    <div class="card-header">
        <h4 class="card-title">Edit Post</h4>
    </div>
    <div class="card-body">
        <form id="edit-post">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" required value="{{post.title}}">
            </div>
            <div class="form-group mt-1">
                <textarea type="text" class="form-control" id="text" required>{{post.text}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-1 d-block mx-auto">Create</button>
        </form>
    </div>
</div>
<script src="/js/blog-actions.js"></script>