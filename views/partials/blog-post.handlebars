<a href="/{{id}}" class="text-decoration-none text-reset">
    <div class="card mb-5">
        <div class="card-header">
            <h3 class="card-title link-primary">{{title}}</h3>
            <h5 class="card-subtitle">{{subtitle user.name posted}}</h5>
        </div>
        <div class="card-body">
            <p class="card-text text-truncate d-inline-block" style="max-width: 100%;">{{text}}</p>
        </div>
    </div>
</a>